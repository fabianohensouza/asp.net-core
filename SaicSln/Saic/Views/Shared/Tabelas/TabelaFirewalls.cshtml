@model FirewallsListViewModel

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th scope="col" class="text-start" style="width: 10%;">Fabricante</th>
            <th scope="col" class="text-start" style="width: 15%;">Modelo</th>
            <th scope="col" class="text-start" style="width: 15%;">Serial</th>
            <th scope="col" class="text-start" style="width: 10%;">Local</th>
            <th scope="col" class="text-center" style="width: 40%;">Observações</th>
            <th scope="col" style="width: 10%;">Ações</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var f in Model?.Firewalls ?? Enumerable.Empty<Firewall>())
        {
            <tr>
                <th scope="row" class="text-start">@f?.Fabricante?.FabricanteNome</th>
                <td class="text-start">@f?.FirewallModelo</td>
                <td class="text-start">@f?.FirewallSerial</td>
                <td class="text-start">
                    @(f.FirewallBackup ? "Backup" : f?.Unidade?.UnidadeNumero)
                </td>
                <td class="text-center">@f?.FirewallObs</td>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <form form asp-action="EditFirewall" method="post">
                            <input type="hidden" name="FirewallID" value="@f?.FirewallID" />
                            <input type="hidden" name="CoopID" value="@f?.CoopID" />
                            <button type="submit" class="btn btn-sm btn-warning fa-solid fa-pen-to-square" title="Editar" />
                        </form>
                        <form form asp-action="AlteraCoopFirewall" method="post">
                            <input type="hidden" name="FirewallID" value="@f?.FirewallID" />
                            <button type="submit" class="btn btn-sm btn-info fa-arrow-right-arrow-left" title="Alterar Coop" />
                        </form>

                        <form asp-action="DeleteFirewall" method="post">
                            <input type="hidden" name="FirewallID" value="@f?.FirewallID" />
                            <button type="submit"
                                    class="btn btn-sm btn-danger fa-solid fa-trash-can"
                                    title="Delete"
                                    onclick="return confirm('Confirma a deleção deste Firewall?');">
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>