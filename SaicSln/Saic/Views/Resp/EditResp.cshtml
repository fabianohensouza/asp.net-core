@model RespCoop

<h4>Adicionar Responsável</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="SaveChanges" method="post">
    @* Hidden field for RespID *@
    <input type="hidden" asp-for="RespID" />

    <div class="form-group d-flex align-items-center gap-2 mt-2">
        <label asp-for="RespNome" style="width: 11%"></label>
        <input asp-for="RespNome" class="form-control" />
    </div>

    <div class="form-group d-flex align-items-center gap-2 mt-2">
        <label asp-for="EquipeID" class="col-form-label me-2" style="width: 10%"></label>
        <select asp-for="EquipeID" class="form-control" asp-items="ViewBag.EquipeList">
            <option value="">-- Selecione uma equipe --</option>
        </select>
    </div>

    <div class="text-end mt-2">
        <input class="btn btn-secondary" type="submit" value="Salvar" />
    </div>
</form>