@model RespCoop

<div class="card mb-4">
    <div class="card-header">
        <h4>Adicionar Responsável</h4>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="SaveChanges" method="post">
    @* Hidden field for RespID *@
    <input type="hidden" asp-for="RespID" />

    <div class="form-group row mb-3">
        <div class="col-md-6">
            <label asp-for="RespNome"  class="mb-0"></label>
            <input asp-for="RespNome" class="form-control" />
        </div>
    </div>

    <div class="text-end mt-2">
        <input class="btn btn-secondary" type="submit" value="Salvar" />
    </div>
</form>