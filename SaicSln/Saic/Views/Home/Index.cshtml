@model CoopsListViewModel

<p>Selecione a instituição</p>

<form asp-controller="Home" asp-action="Index" method="get" class="d-flex align-items-center">
    <select id="coopSelecionada" name="coopSelecionada" asp-items="@(new SelectList(Model.ListaCoops))" class="form-control mr-2">
        <option value="">-- Selecione --</option>
        @if (Model.CoopAtual != null)
        {
            <option value="@Model.CoopAtual">@Model.CoopAtual</option>
        }
        
    </select>
    <button type="submit" class="btn btn-primary btn-sm">Filter</button>
</form>

@foreach (var c in Model?.Coops ?? Enumerable.Empty<Coop>())
{
    <partial name="CoopSummary" model="c" />
}

<div page-model="@Model?.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>