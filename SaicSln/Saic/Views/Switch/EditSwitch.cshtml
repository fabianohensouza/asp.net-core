@model Switch

<div class="card mb-4">
    <div class="card-header">
        <h4>Cadastro de Switch</h4>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="SaveChanges" method="post">
    @* Hidden field for SwitchID *@
    <input type="hidden" asp-for="SwitchID" />
    @* Hidden field for CoopID *@
    <input type="hidden" asp-for="CoopID" />

    <div class="form-group row mb-3">
        <div class="col-md-3">
            <label class="mb-0">Coop</label>
            <input class="form-control" value="@ViewBag.CoopList" readonly />
        </div>
        <div class="col-md-3">
            <label asp-for="UnidadeID" class="mb-0"></label>
            <select asp-for="UnidadeID" class="form-control" asp-items="ViewBag.UnidadeList">
                <option value="">Selecione unidade</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="FabricanteID" class="mb-0"></label>
            <select asp-for="FabricanteID" class="form-control" asp-items="ViewBag.FabricanteList">
                <option value="">Selecione Fabricante</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="SwitchModelo" class="mb0"></label>
            <input asp-for="SwitchModelo" class="form-control"/>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-md-3">
            <label asp-for="SwitchPortas" class="mb0"></label>
            <input asp-for="SwitchPortas" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SwitchAcesso" class="mb0"></label>
            <input asp-for="SwitchAcesso" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="SwitchSerial" class="mb-0"></label>
            <input asp-for="SwitchSerial" class="form-control"/>
        </div>
        <div class="col-md-2 d-flex flex-column align-items-center justify-content-center">
            <label class="mb-0 me-2">Backup</label>
            <input asp-for="SwitchBackup" type="checkbox" class="form-check-input" value="true" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="col-md-12">
            <label asp-for="SwitchObs" class="mb-0"></label>
            <textarea asp-for="SwitchObs" class="form-control" rows="4"></textarea>
        </div>
    </div>

    <div class="d-flex justify-content-end align-items-center gap-2">
        <form asp-action="SaveChanges" method="post" class="mb-0">
            <input type="hidden" asp-for="SwitchID" />
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

        <form asp-action="ListSwitches" method="post" class="mb-0">
            <input type="hidden" name="CoopID" value="@Model.CoopID" />
            <button type="submit" class="btn btn-secondary">Retornar</button>
        </form>
    </div>
</form>