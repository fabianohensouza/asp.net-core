@model Firewall

<div class="card mb-4">
    <div class="card-header">
        <h4>Alterar Coop do Firewall</h4>
    </div>
</div>

<form asp-action="SaveChanges" method="post">
    @* Hidden field for FirewallID *@
    <input type="hidden" asp-for="FirewallID" />
    @* Hidden field for FabricanteID *@
    <input type="hidden" asp-for="FabricanteID" />
    @* Hidden field for FirewallModelo *@
    <input type="hidden" asp-for="FirewallModelo" />
    @* Hidden field for FirewallSerial *@
    <input type="hidden" asp-for="FirewallSerial" />
    @* Hidden field for FirewallObs *@
    <input type="hidden" asp-for="FirewallObs" />

    <div class="form-group row mb-3">
        <div class="col-md-6 d-flex align-items-center">
            <label class="col-form-label me-2" style="width: 30%">Firewall</label>
            <input class="form-control" value="@ViewBag.DadosFirewall" readonly />
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <label class="col-form-label me-2" style="width: 30%">Serial</label>
            <input class="form-control" value="@Model.FirewallSerial" readonly />
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="col-md-6 d-flex align-items-center">
            <label class="col-form-label me-2" style="width: 30%">Coop Atual</label>
            <input class="form-control" value="@ViewBag.CoopAtual" readonly />
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <label asp-for="CoopID" class="col-form-label me-2" style="width: 30%">Nova Coop</label>
            <select asp-for="CoopID" class="form-control" asp-items="ViewBag.CoopList">
                <option value="">-- Selecione Coop --</option>
            </select>
        </div>
    </div>

    <div class="d-flex justify-content-end align-items-center gap-2">
        <form asp-action="SaveChanges" method="post" class="mb-0">
            <input type="hidden" asp-for="FirewallID" />
            <button type="submit" class="btn btn-primary">Alterar</button>
        </form>

        <form asp-action="ListFirewalls" method="post" class="mb-0">
            <input type="hidden" name="CoopID" value="@Model.CoopID" />
            <button type="submit" class="btn btn-secondary">Retornar</button>
        </form>
    </div>
</form>